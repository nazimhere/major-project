<% layout("/layouts/boiler_plate") -%>

<div class="container my-5">
  <!-- HEADER -->
  <div class="row mb-5">
    <div class="col-12">
      <h1 class="display-5 fw-bold text-success mb-3">
        <i class="fas fa-plus-circle me-2"></i>Add New Listing
      </h1>
      <p class="lead text-muted">Share your property with travelers across India</p>
    </div>
  </div>

  <!-- LISTING FORM -->
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
      <div class="card shadow-lg border-0 glass-effect">
        <div class="card-body p-5">
          <form action="/listings" novalidate class="needs-validation" method="POST">
            
            <!-- TITLE -->
            <div class="mb-4">
              <label for="title" class="form-label fw-bold fs-6 mb-2">Property Title</label>
              <input name="listing[title]" id="title" placeholder="Cozy Beachfront Cottage in Goa" 
                     type="text" class="form-control form-control-lg" required/>
              <div class="invalid-feedback">Title is required (max 100 chars)!</div>
            </div>

            <!-- DESCRIPTION -->
            <div class="mb-4">
              <label for="description" class="form-label fw-bold fs-6 mb-2">Description</label>
              <textarea name="listing[description]" id="description" 
                        placeholder="Describe your property..." 
                        class="form-control" rows="4" required></textarea>
              <div class="invalid-feedback">Description helps travelers choose your place!</div>
            </div>

            <!-- IMAGE -->
            <div class="mb-4">
              <label for="image" class="form-label fw-bold fs-6 mb-2">Image URL</label>
              <input name="listing[image]" id="image" placeholder="https://images.unsplash.com/..." 
                     type="url" class="form-control" required/>
              <div class="invalid-feedback">Enter valid image URL!</div>
            </div>

            <!-- PRICE + COUNTRY -->
            <div class="row g-4 mb-4">
              <div class="col-md-6">
                <label for="price" class="form-label fw-bold fs-6 mb-2">Price per night</label>
                <input name="listing[price]" id="price" placeholder="1200" type="number" 
                       min="100" max="50000" step="1" class="form-control form-control-lg" required/>
                <div class="invalid-feedback">₹100 - ₹50,000 per night</div>
              </div>
              <div class="col-md-6">
                <label for="country" class="form-label fw-bold fs-6 mb-2">Country</label>
                <input name="listing[country]" id="country" placeholder="India" 
                       type="text" class="form-control form-control-lg" required/>
                <div class="invalid-feedback">Country is required!</div>
              </div>
            </div>

            <!-- LOCATION -->
            <div class="mb-5">
              <label for="location" class="form-label fw-bold fs-6 mb-2">Location</label>
              <input name="listing[location]" id="location" placeholder="Goa, Panjim Beach" 
                     type="text" class="form-control form-control-lg" required/>
              <div class="invalid-feedback">City/area name required!</div>
            </div>

            <!-- ACTION BUTTONS -->
            <div class="d-grid gap-3">
              <button type="submit" class="btn btn-success btn-lg px-5 py-3 shadow-lg">
                <i class="fas fa-check me-2"></i>Create Listing
              </button>
              <a href="/listings" class="btn btn-outline-secondary btn-lg px-5 py-3">
                <i class="fas fa-arrow-left me-2"></i>Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrap validation
  (function() {
    'use strict';
    const form = document.querySelector('.needs-validation');
    if (form) {
      form.addEventListener('submit', (e) => {
        if (!form.checkValidity()) {
          e.preventDefault();
          e.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    }
  })();
</script>

<style>
  .glass-effect {
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255,255,255,0.4);
  }
</style>
