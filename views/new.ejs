<% layout("/layouts/boiler_plate") %>
<body>
    <br><br>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create New Listing</h3>
            <form action="/listings" novalidate class="needs-validation" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" id="title" placeholder="Enter catchy title" 
                           type="text" class="form-control" required/>
                    <div class="invalid-feedback">Title is required!</div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" id="description" 
                              placeholder="Enter description" class="form-control" rows="3"></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input name="listing[image]" id="image"  required placeholder="Enter image URL" 
                           type="url" class="form-control"/>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="price" class="form-label">Price $</label>
                        <input name="listing[price]" id="price" placeholder="1200" 
                               type="number" min="0" step="0.01" class="form-control" required/>
                        <div class="invalid-feedback">Price must be positive!</div>
                    </div>
                    
                    <div class="col-md-8 mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" id="country" placeholder="India" 
                               type="text" class="form-control" required/>
                        <div class="invalid-feedback">Country is required!</div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>  <!-- Use 'location' to match schema -->
                    <input name="listing[location]" id="location" placeholder="Haridwar" 
                           type="text" class="form-control" required/>
                    <div class="invalid-feedback">Location is required!</div>
                </div>
                
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-plus"></i> Add Listing
                </button>
                <a href="/listings" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>

    <script>
        // Bootstrap client-side validation
        (function() {
            'use strict';
            const form = document.querySelector('.needs-validation');
            form.addEventListener('submit', (e) => {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
</body>

