<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book <%= listing.title %> | TravelInn ðŸ‡®ðŸ‡³</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gradient" style="font-family: 'Poppins', sans-serif;">

  <!-- SIMPLIFIED NAVBAR (No boilerplate include) -->
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top glass-navbar shadow-xl pt-4">
    <div class="container">
      <a class="navbar-brand fw-bold fs-2 brand-glow" href="/listings">
        <i class="fas fa-plane-departure me-2 brand-icon"></i>TravelInn
      </a>
      <a href="/listings" class="btn btn-outline-light btn-sm me-3">
        <i class="fas fa-arrow-left me-1"></i>All Listings
      </a>
    </div>
  </nav>

  <!-- MAIN CONTENT -->
  <main class="pt-5 pb-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-10">
          
          <!-- HERO BOOKING SECTION -->
          <div class="hero-booking-section mb-5">
            <div class="row g-0">
              <div class="col-md-6">
                <img src="<%= listing.image %>" alt="<%= listing.title %>" class="img-fluid hero-booking-img rounded-4 shadow-xl">
              </div>
              <div class="col-md-6 bg-white rounded-end-4 shadow-xl p-5 booking-info-card">
                <div class="d-flex justify-content-between align-items-start mb-4">
                  <div>
                    <h1 class="fw-bold text-dark mb-2"><%= listing.title %></h1>
                    <p class="text-muted fs-5 mb-1"><%= listing.location %>, <%= listing.country %></p>
                    <div class="price-badge-hero mb-2">
                      <i class="fas fa-rupee-sign me-1"></i>
                      <%= listing.price.toLocaleString() %> /night
                    </div>
                  </div>
                  <div class="text-end">
                    <span class="badge bg-success fs-6 px-3 py-2">Verified</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- BOOKING FORM -->
          <div class="row">
            <div class="col-lg-8 mx-auto">
              <div class="card glass-card border-0 shadow-xl">
                <div class="card-body p-5">
                  <div class="text-center mb-5">
                    <h2 class="display-5 fw-bold text-dark mb-3">
                      <i class="fas fa-calendar-check text-success me-3"></i>Secure Your Stay
                    </h2>
                    <p class="lead text-muted">2 simple steps to confirm your booking</p>
                  </div>

                  <form action="/bookings/<%= listing._id %>?_method=POST" method="POST" novalidate class="booking-form needs-validation">
                    
                    <!-- DATE PICKER ROW -->
                    <div class="row g-4 mb-5">
                      <div class="col-md-6">
                        <label class="form-label fw-bold fs-5 mb-3">Check-in</label>
                        <div class="input-group input-group-booking">
                          <span class="input-group-text booking-input-icon">
                            <i class="fas fa-calendar-day text-warning"></i>
                          </span>
                          <input type="date" class="form-control booking-input" name="startDate" id="checkin" required min="<%= new Date().toISOString().split('T')[0] %>">
                        </div>
                      </div>
                      
                      <div class="col-md-6">
                        <label class="form-label fw-bold fs-5 mb-3">Check-out</label>
                        <div class="input-group input-group-booking">
                          <span class="input-group-text booking-input-icon">
                            <i class="fas fa-calendar-day text-warning"></i>
                          </span>
                          <input type="date" class="form-control booking-input" name="endDate" id="checkout" required>
                        </div>
                      </div>
                    </div>

                    <!-- GUESTS & TOTAL PRICE -->
                    <div class="row g-4 align-items-end mb-5">
                      <div class="col-md-6">
                        <label class="form-label fw-bold fs-5 mb-3">Guests</label>
                        <div class="input-group input-group-booking">
                          <span class="input-group-text booking-input-icon">
                            <i class="fas fa-users text-warning"></i>
                          </span>
                          <input type="number" class="form-control booking-input" name="guests" min="1" max="10" value="1" required>
                        </div>
                      </div>
                      
                      <div class="col-md-6">
                        <div class="total-price-card">
                          <div class="d-flex justify-content-between">
                            <span class="fs-5 fw-bold text-muted">Total (est.)</span>
                            <div>
                              <div class="h3 fw-bold text-success mb-0" id="totalPrice">
                                â‚¹<%= listing.price.toLocaleString() %>
                              </div>
                              <small class="text-muted">per night Ã— 1 night</small>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- ACTION BUTTONS -->
                    <div class="d-grid gap-3">
                      <button type="submit" class="btn btn-success btn-lg py-4 book-now-hero shadow-lg">
                        <i class="fas fa-lock me-3"></i>
                        <span class="d-inline-block">
                          <span class="fs-4 fw-bold">Confirm & Pay</span>
                          <br><small class="text-white-50">â‚¹<%= listing.price.toLocaleString() %> total</small>
                        </span>
                      </button>
                      <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary btn-lg py-3">
                        <i class="fas fa-arrow-left me-2"></i>Back to Listing
                      </a>
                    </div>

                    <!-- SECURITY BADGE -->
                    <div class="text-center mt-4 pt-4 border-top">
                      <i class="fas fa-shield-alt text-success me-2"></i>
                      <small class="text-muted">Payment secured with 256-bit SSL encryption</small>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    // LIVE PRICE CALCULATOR
    const pricePerNight = <%= listing.price %>;
    const checkinInput = document.getElementById('checkin');
    const checkoutInput = document.getElementById('checkout');
    const guestsInput = document.querySelector('input[name="guests"]');
    const totalPriceEl = document.getElementById('totalPrice');

    function updateTotal() {
      const checkin = new Date(checkinInput.value);
      const checkout = new Date(checkoutInput.value);
      const guests = parseInt(guestsInput.value) || 1;
      
      if (checkinInput.value && checkoutInput.value) {
        const nights = Math.ceil((checkout - checkin) / (1000 * 60 * 60 * 24));
        const total = pricePerNight * nights * guests;
        totalPriceEl.textContent = 'â‚¹' + total.toLocaleString();
      }
    }

    [checkinInput, checkoutInput, guestsInput].forEach(input => {
      input.addEventListener('change', updateTotal);
      input.addEventListener('input', updateTotal);
    });
  </script>

  <style>
    .hero-booking-img { height: 450px; object-fit: cover; border-radius: 24px 0 0 24px; }
    .booking-info-card { 
      border-radius: 0 24px 24px 0; 
      background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(248,250,252,0.9));
      backdrop-filter: blur(20px);
    }
    .price-badge-hero {
      background: linear-gradient(45deg, #FBBF24, #f59e0b);
      color: #1f2937; padding: 12px 24px; border-radius: 50px; 
      font-weight: 700; font-size: 1.3rem; box-shadow: 0 10px 30px rgba(251,191,36,0.4);
    }
    .glass-card { 
      background: rgba(255,255,255,0.85); backdrop-filter: blur(25px); 
      border: 1px solid rgba(255,255,255,0.2);
    }
    .booking-input-icon { 
      background: linear-gradient(45deg, #FBBF24, #f59e0b); border: none; color: white; 
    }
    .total-price-card { 
      background: linear-gradient(135deg, #f8fafc, #f1f5f9); padding: 24px; 
      border-radius: 20px; border: 1px solid rgba(0,0,0,0.05);
    }
    .book-now-hero { 
      background: linear-gradient(45deg, #10b981, #059669); border-radius: 20px; 
      font-weight: 600; transition: all 0.4s ease;
    }
    .book-now-hero:hover { transform: translateY(-3px); box-shadow: 0 20px 50px rgba(16,185,129,0.4); }
  </style>
</body>
</html>
