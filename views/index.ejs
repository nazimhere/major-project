<% layout("/layouts/boiler_plate")%>
<body>
    <h3>All Lists</h3>
    
    <div class="row g-4">
        <% for(let listing of allListings) { %>
        
             <div class="col-md-3 col-lg-4">
                  <a href="/listing/<%= listing._id %>" class="listing-links">
                    <div class="card h-100" style="width: 22rem;">
                                        
                    
  <div class="card-img-overlay">Travel_innn ✈️</div>

<img src="<%= listing.image %>" 
                         class="card-img-top" 
                         alt="<%= listing.title %>"
                         style="height:200px; object-fit:cover;">

     
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text text-success fw-bold mb-2">
                            &#8377;<%= listing.price?.toLocaleString("en-IN") || 'N/A' %>/Night
                        </p>
                        <div class="mt-auto">
                            <a href="/listing/<%= listing._id %>" class="btn btn-primary w-100 mb-1">View Details</a>
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-secondary btn-sm w-100">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
       </a>  <% } %>
   </div>
</body>
