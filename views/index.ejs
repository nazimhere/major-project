<% layout("/layouts/boiler_plate") %>

<div class="container mt-4">
    <h3>All Listings</h3>

    <% if (allListings.length === 0) { %>
        <div class="alert alert-info text-center">
            No listings found. <a href="/listings/new">Create one now</a>
        </div>
    <% } else { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% allListings.forEach(listing => { %>
                <div class="col">
                    <div class="card h-100">
                       <a href="/listings/<%= listing._id %>">
    <img src="<%= listing.image || '/images/placeholder.jpg' %>" 
         class="card-img-top" 
         alt="<%= listing.title || 'No image' %>" 
         style="height: 200px; object-fit: cover; border-radius: 15%;"
         loading="lazy"
         onerror="if(this.src !== '/images/placeholder.jpg') this.src='/images/placeholder.jpg'">
</a>


                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= listing.title %></h5>
                            <p class="card-text flex-grow-1"><%= listing.description?.substring(0, 100) %>...</p>
                            <div class="mt-auto">
                                <span class="badge bg-primary fs-6 mb-2"><%= listing.location %>, <%= listing.country %></span>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-success"><strong>Price:</strong> &#8377;<%= listing.price %></span>
                                    <a href="/listings/<%= listing._id %>" class="btn btn-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
    <br><br>
</div>


